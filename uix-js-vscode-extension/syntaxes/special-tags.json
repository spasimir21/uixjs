{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "uix.injection.special-tags",
  "injectionSelector": "L:text.html",
  "patterns": [
    {
      "include": "#if-open"
    },
    {
      "include": "#each-open"
    },
    {
      "include": "#else-open"
    },
    {
      "include": "#special-tag-close"
    },
    {
      "include": "#component-tag"
    }
  ],
  "repository": {
    "if-open": {
      "begin": "(<)((else\\-)?if)(\\s+_\\s*=)\\s*(\"|')",
      "end": "\\5\\s*>",
      "beginCaptures": {
        "1": { "name": "punctuation" },
        "2": { "name": "storage.type" },
        "4": { "name": "punctuation" },
        "5": { "name": "punctuation" }
      },
      "endCaptures": {
        "0": { "name": "punctuation" }
      },
      "patterns": [{ "include": "source.js" }],
      "name": "if-open"
    },
    "each-open": {
      "begin": "(<)(each)(\\s+_\\s*=)\\s*(\"|')(.+?)(:)",
      "end": "\\4\\s*>",
      "beginCaptures": {
        "1": { "name": "punctuation" },
        "2": { "name": "storage.type" },
        "3": { "name": "punctuation" },
        "4": { "name": "punctuation" },
        "5": { "name": "variable" },
        "6": { "name": "punctuation" }
      },
      "endCaptures": {
        "0": { "name": "punctuation" }
      },
      "patterns": [{ "include": "source.js" }],
      "name": "each-open"
    },
    "else-open": {
      "match": "(<)(else)(>)",
      "captures": {
        "1": { "name": "punctuation" },
        "2": { "name": "storage.type" },
        "3": { "name": "punctuation" }
      },
      "name": "else-open"
    },
    "special-tag-close": {
      "match": "(</)(if|else\\-if|else|each)(>)",
      "captures": {
        "1": { "name": "punctuation" },
        "2": { "name": "storage.type" },
        "3": { "name": "punctuation" }
      },
      "name": "special-tag-close"
    },
    "component-tag": {
      "begin": "(<)(component)",
      "end": "/>",
      "beginCaptures": {
        "1": { "name": "punctuation" },
        "2": { "name": "storage.type" }
      },
      "endCaptures": {
        "0": { "name": "punctuation" }
      },
      "contentName": "meta.tag.other.unrecognized.html.derivative"
    }
  }
}
