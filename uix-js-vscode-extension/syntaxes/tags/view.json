{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.html.uix.view",
  "injectionSelector": "L:text.html -meta -comment",
  "patterns": [
    {
      "include": "#view-tag"
    }
  ],
  "repository": {
    "view-tag": {
      "begin": "(<)(view)",
      "end": "/>",
      "beginCaptures": {
        "1": { "name": "punctuation" },
        "2": { "name": "keyword.control" }
      },
      "endCaptures": {
        "0": { "name": "punctuation" }
      },
      "contentName": "meta.tag.structure.view.start.html"
    }
  }
}
