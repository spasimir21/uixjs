{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "uix.injection.attribute-bindings",
  "injectionSelector": "L:meta.tag",
  "patterns": [
    {
      "include": "#attribute-bindings"
    },
    {
      "include": "#attribute-ignore"
    },
    {
      "include": "#attribute-not-component"
    },
    {
      "include": "#attribute"
    }
  ],
  "repository": {
    "attribute-bindings": {
      "begin": "((a|attr|ba|bool-attr|p|prop|s|shared|e|export|d|direct)?:|@|\\.|#|\\*)([a-zA-Z0-9\\-\\:\\#\\!]+?)\\s*(=)\\s*('|\")",
      "end": "(\\5)",
      "beginCaptures": {
        "1": { "name": "punctuation" },
        "3": { "name": "entity.other.attribute-name" },
        "4": { "name": "punctuation" },
        "5": { "name": "punctuation" }
      },
      "endCaptures": {
        "1": { "name": "punctuation" }
      },
      "patterns": [{ "include": "source.js" }],
      "name": "attribute-bindings"
    },
    "attribute-ignore": {
      "match": "(?<=\\s)\\$i(?=\\s+|\\s*/?>)",
      "name": "punctuation"
    },
    "attribute-not-component": {
      "match": "(?<=\\s)\\$nc(?=\\s+|\\s*/?>)",
      "name": "punctuation"
    },
    "attribute": {
      "begin": "([a-zA-Z0-9\\-\\:\\#]+?)\\s*(=)\\s*('|\")",
      "end": "(\\3)",
      "beginCaptures": {
        "1": { "name": "entity.other.attribute-name" },
        "2": { "name": "punctuation" },
        "3": { "name": "punctuation" }
      },
      "endCaptures": {
        "1": { "name": "punctuation" }
      },
      "contentName": "string",
      "name": "attribute"
    }
  }
}
